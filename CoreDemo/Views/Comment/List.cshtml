@model IEnumerable<EntityLayer.Concrate.Comment>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Yorum  Listesi</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Yorum oluştur
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-stiped" style="width: ;100%">
        <thead>
            <tr>
                <th>
                   yorum Başlığı
                </th>
                <th>
                    yorum Açıklaması
                </th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.CommentUserName
                    </td>
                    <td width="30%">
                        @obj.CommentContent

                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            
                            <form asp-controller="Comment" asp-action="Delete" asp-route-id="@obj.CommentID" method="post">
                                <button type="submit" class="btn btn-lg btn-primary mt-2">
                                    Sil

                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>