@using EntityLayer.Concrate
@model List<Blog>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">son 10 blog</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> başlık </th>
                                <th> kategori </th>
                                <th> tarih </th>
                                <th> detaylar </th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.BlogImage" class="mr-2" alt="image"> 
                                    </td>

                                    <td>
                                        @item.BlogTitle
                                    </td>
                                    
                                    <td>
                                        <label class="badge badge-gradient-success">@item.CategoryID</label>
                                    </td>
                                    <td> @(((DateTime)item.BlogCreateDate).ToString("dd-MM-yyyy")) </td>
                                    <td>
                                        <a href ="/Blog/BlogReadAll/@item.BlogID" class="btn btn-dark">Detaylar</a>
                                    </td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>